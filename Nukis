-- Funcionalidades
ExecuteBtn.MouseButton1Click:Connect(function()
    local code = CodeBox.Text
    if code and code ~= "" then
        local success, error = pcall(function()
            loadstring(code)()
        end)
        if not success then
            warn("Nukis Executor Error: " .. tostring(error))
        end
    end
end)

ClearBtn.MouseButton1Click:Connect(function()
    CodeBox.Text = ""
end)

CloseBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
    OpenButton.Visible = true
    AuraFrame.Visible = true
end)

-- Funcionalidade do bot√£o Open
local isOpen = false

OpenButton.MouseButton1Click:Connect(function()
    isOpen = not isOpen
    if isOpen then
        MainFrame.Visible = true
        OpenButton.Visible = false
        AuraFrame.Visible = false
        OpenButton.Text = "Close"
    else
        MainFrame.Visible = false
        OpenButton.Visible = true
        AuraFrame.Visible = true
        OpenButton.Text = "Open"
    end
end)

-- Efeito de pulsa√ß√£o na aura
spawn(function()
    while true do
        if AuraFrame.Visible then
            -- Expandir
            game:GetService("TweenService"):Create(
                AuraFrame,
                TweenInfo.new(1, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut),
                {Size = UDim2.new(0, 110, 0, 110), BackgroundTransparency = 0.8}
            ):Play()
            
            wait(1)
            
            -- Contrair
            game:GetService("TweenService"):Create(
                AuraFrame,
                TweenInfo.new(1, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut),
                {Size = UDim2.new(0, 100, 0, 100), BackgroundTransparency = 0.7}
            ):Play()
            
            wait(1)
        else
            wait(0.1)
        end
    end
end)

-- Efeitos visuais
local function addHoverEffect(button, normalColor, hoverColor)
    button.MouseEnter:Connect(function()
        button.BackgroundColor3 = hoverColor
    end)
    
    button.MouseLeave:Connect(function()
        button.BackgroundColor3 = normalColor
    end)
end

addHoverEffect(ExecuteBtn, Color3.fromRGB(0, 120, 0), Color3.fromRGB(0, 150, 0))
addHoverEffect(ClearBtn, Color3.fromRGB(120, 0, 0), Color3.fromRGB(150, 0, 0))
addHoverEffect(CloseBtn, Color3.fromRGB(200, 0, 0), Color3.fromRGB(220, 0, 0))
addHoverEffect(OpenButton, Color3.fromRGB(128, 0, 128), Color3.fromRGB(148, 0, 148))

-- Inicializar primeira aba
switchTab("Player")

print("Nukis Executor carregado com sucesso!")
