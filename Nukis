-- Sistema de abas
local tabs = {}
local currentTab = nil

-- Fun√ß√£o para criar aba
local function createTab(name, icon, yPos)
    local tabBtn = Instance.new("TextButton", TabContainer)
    tabBtn.Size = UDim2.new(1, -10, 0, 40)
    tabBtn.Position = UDim2.new(0, 5, 0, yPos)
    tabBtn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    tabBtn.Text = "  " .. icon .. "  " .. name
    tabBtn.TextColor3 = Color3.fromRGB(200, 200, 200)
    tabBtn.TextSize = 14
    tabBtn.Font = Enum.Font.Gotham
    tabBtn.TextXAlignment = Enum.TextXAlignment.Left
    
    local tabUICorner = Instance.new("UICorner", tabBtn)
    tabUICorner.CornerRadius = UDim.new(0, 6)
    
    -- Container do conte√∫do da aba
    local content = Instance.new("Frame", ContentContainer)
    content.Size = UDim2.new(1, -10, 1, -10)
    content.Position = UDim2.new(0, 5, 0, 5)
    content.BackgroundTransparency = 1
    content.Visible = false
    
    tabs[name] = {
        button = tabBtn,
        content = content
    }
    
    tabBtn.MouseButton1Click:Connect(function()
        switchTab(name)
    end)
    
    return content
end

-- Fun√ß√£o para trocar de aba
function switchTab(tabName)
    -- Desativar aba atual
    if currentTab then
        tabs[currentTab].button.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
        tabs[currentTab].button.TextColor3 = Color3.fromRGB(200, 200, 200)
        tabs[currentTab].content.Visible = false
    end
    
    -- Ativar nova aba
    currentTab = tabName
    tabs[tabName].button.BackgroundColor3 = Color3.fromRGB(70, 130, 200)
    tabs[tabName].button.TextColor3 = Color3.fromRGB(255, 255, 255)
    tabs[tabName].content.Visible = true
end

-- Criar abas
local playerContent = createTab("Player", "üë§", 10)
local executorContent = createTab("Executor", "‚ö°", 60)

-- CONTE√öDO DA ABA PLAYER
